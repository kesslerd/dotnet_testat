<Window x:Class="AutoReservation.UI.Views.Kunde"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoReservation.UI.Views"
        mc:Ignorable="d"
        Title="Kunde" Height="150" Width="300">
    
    <Grid Margin="10 10 10 10">
        <Grid.RowDefinitions>
            <RowDefinition Height="10*" />
            <RowDefinition Height="10*" />
            <RowDefinition Height="10*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40*" />
            <ColumnDefinition Width="60*" />
        </Grid.ColumnDefinitions>
        <Label Content="Vorname" Grid.Row="0"/>
        <Label Content="Nachname" Grid.Row="1"/>
        <Label Content="Geburtsdatum" Grid.Row="2"/>

        <TextBox Name="FirstNameInput" Grid.Row="0" Grid.Column="1" Margin="0 0 0 3"/>
        <TextBox Name="LastNameInput" Grid.Row="1" Grid.Column="1" Margin="0 0 0 3"/>
        <DatePicker Grid.Row="2" Grid.Column="1" Padding="5" Margin="0 0 0 3"/>

    </Grid>
</Window>
